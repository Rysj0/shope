/* pages/car/car.wxss */
.clearfix:after {
  content: " ";
  display: block;
  clear: both;
} 


.car_item_wrap{
    position: relative;
    height: 100px;
    background-color: #fff;
    padding-left: 100px;
    border-bottom:1px solid #e7e7eb;
}
.car_image_wrap{
    position: absolute;
    top: 10px;
    left: 10px;
}
.car_image_wrap image{
    width: 80px;
    height: 80px;
}
.car_item_title{
    padding:10px 10px 10px 0;
    font-size: 14px;
}
.car_item_bot{
    padding:0px 10px 0px 0px;
    height: 28px;
    line-height: 28px;
}

.car_item_price{
    color:#ff0000;
    font-size: 14px;
    width: 70px;
    float: left;
}
.car_item_operate{
    display: inline-block;
    float: right;
}
.car_item_btn{
    display: inline-block;
    width: 26px;
    height: 26px;
    text-align: center;
    line-height: 28px;
    border: 1px solid #b2b2b2;
    color: #929292;
}
.car_item_num{
    display: inline-block;
    width: 40px;
    height: 26px;
    text-align: center;
    line-height: 28px;
    border-top: 1px solid #b2b2b2;
    border-bottom: 1px solid #b2b2b2;
    color: #929292;
}
.car_item_del{
    display: inline-block;
    width: 28px;
    height: 28px;
    float: right;
    margin-left: 10px;
}
.car_list_bot{
    background-color: #fff;
    padding:10px;
    font-size: 14px;
    height: 25px;
    line-height: 25px;
    text-align: center;
    padding-right: 50px;
    position: relative;
    color: #929292;
}
.car_list_bot image{
    width: 30px;
    height: 25px;
    position: absolute;
    top: 10px;
    right: 10px;
}
.red{
    color:#ff0000;
}

.car_bot{
    position: fixed;
    width: 100%;
    background-color: #fff;
    bottom: 0px;
    border-bottom: 1px solid #e5e5e5;
    font-size: 14px;
}
.car_bot_wrap{
    padding:10px;
    height: 30px;
    line-height: 30px;
}
.car_order_confirm{
    float: right;
    background-color: #ff7e3a;
    color: #fff;
    border-radius: 3px;
    width: 80px;
    text-align: center;
}
.car_total_monay{
    color: #ff0000;
    margin-left: 5px;
}